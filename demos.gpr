-- Updated May 2011 for new dir structure

with "lumen.gpr";
with "config";

project Demos is

   for Source_Dirs use ("demo");
   for Object_Dir use "demo/obj";
   for Main use ("colors.adb",
                 "info.adb",
                 "sgi_simple.adb",
                 "spinner.adb",
                 "texture.adb",
                 "text1.adb",
                 "text2.adb",
                 "multi.adb",
                 "simple_2d",
                 "simple_3d",
                 "fire",
                 "blending",
                 "shaders",
		 "vertex_buffers"
                );
   for Exec_Dir use "bin";

   package Ide is
      for Vcs_Kind use "Git";
   end Ide;

   package Builder is
      for Default_Switches ("ada") use ("-s");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnatn", "-fstack-check");
   end Compiler;

   package Linker is
      case Config.oS is
         when "Windows_NT" =>
            for Default_Switches ("ada") use ("-lglu32","-lopengl32","-lGDI32");
         when "Linux"|"MacOSX" =>
            for Default_Switches ("ada") use ("-lGLU","-lGL","-lX11");
      end case;
   end Linker;

end Demos;

